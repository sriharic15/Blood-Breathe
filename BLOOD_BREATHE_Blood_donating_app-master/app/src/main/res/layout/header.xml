<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/header_background"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="3dp"
    android:paddingRight="20dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_user_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/donor"/>
    <TextView
        android:id="@+id/nav_user_fullname"
        android:text="Full Name"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="2dp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/nav_user_email"
        android:text="example@gmail.com"
        android:textStyle="bold"
        android:layout_marginTop="2dp"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/nav_user_bloodgroup"
        android:text="Blood Group"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="2dp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/nav_user_city"
        android:text="City"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/nav_user_number"
        android:text="phone number "
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</LinearLayout>